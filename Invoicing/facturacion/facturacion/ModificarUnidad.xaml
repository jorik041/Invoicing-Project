        <Label x:Name="label1_Copy" Content="UNIDAD DE MEDIDA" HorizontalAlignment="Left" Margin="158,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.264,-2.19" FontWeight="Bold" FontSize="21.333" Height="38" Width="219"/>
