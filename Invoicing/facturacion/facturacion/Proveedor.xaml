        <Separator HorizontalAlignment="Left" Height="100" Margin="0,-27,0,0" VerticalAlignment="Top" Width="159" Background="#FF172B6C"/>
        <Separator HorizontalAlignment="Left" Height="100" Margin="10,285,-19,-34" VerticalAlignment="Top" Width="537" Background="#FF172B6C"/>
        <Separator HorizontalAlignment="Left" Height="5" Margin="334,214,0,0" VerticalAlignment="Top" Width="131" Background="#FF172B6C"/>
        <Separator HorizontalAlignment="Left" Height="5" Margin="334,263,0,0" VerticalAlignment="Top" Width="131" Background="#FF172B6C"/>
