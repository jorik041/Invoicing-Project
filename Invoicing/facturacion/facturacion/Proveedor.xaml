        <Label x:Name="label_Copy2" Content="Empresa" HorizontalAlignment="Left" Margin="46,212,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label_Copy3" Content="RNC" HorizontalAlignment="Left" Margin="46,254,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label_Copy4" Content="Estado" HorizontalAlignment="Left" Margin="46,298,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label_Copy5" Content="PROVEEDOR" HorizontalAlignment="Left" Margin="164,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="21.333"/>
