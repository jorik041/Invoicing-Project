        xmlns:local="clr-namespace:facturacion"
        mc:Ignorable="d"
        Title="Proveedor" Height="385.989" Width="592.931" Background="#FFB4F5D2">
    <Grid Margin="0,0,-8,4" RenderTransformOrigin="0.693,0.553">
