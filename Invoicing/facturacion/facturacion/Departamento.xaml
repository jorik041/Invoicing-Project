<Window x:Class="facturacion.Departamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:facturacion"
        mc:Ignorable="d"
        Title="Departamento" Height="244.811" Width="506.688" FontWeight="Bold">
    <Grid Background="#FFB4F5D2" HorizontalAlignment="Left" Width="497">
        <Button x:Name="button" Content="AGREGAR" HorizontalAlignment="Left" Margin="24,163,0,0" VerticalAlignment="Top" Width="118" Click="button_Click" Background="#FF0E0D0D" Foreground="#FFFFF0F0" FontWeight="Bold" Height="30"/>
        <Button x:Name="button1" Content="MODIFICAR" HorizontalAlignment="Left" Margin="147,163,0,0" VerticalAlignment="Top" Width="105" Background="#FF0E0D0D" Foreground="#FFFFF0F0" FontWeight="Bold" Click="button1_Click" Height="30"/>
        <TextBox x:Name="TxtNombre" HorizontalAlignment="Left" Height="23" Margin="123,64,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtEstado" HorizontalAlignment="Left" Height="23" Margin="123,106,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label1" Content="Nombre" HorizontalAlignment="Left" Margin="45,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label4" Content="Estado" HorizontalAlignment="Left" Margin="54,106,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
