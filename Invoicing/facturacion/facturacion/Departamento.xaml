        <Separator HorizontalAlignment="Left" Height="100" Margin="10,-20,0,0" VerticalAlignment="Top" Width="56" FontWeight="Bold" Background="#FF172B6C"/>
        <Separator HorizontalAlignment="Left" Height="100" Margin="249,-20,0,0" VerticalAlignment="Top" Width="185" FontWeight="Bold" Background="#FF172B6C"/>
        <Button x:Name="button3" Content="BACK" HorizontalAlignment="Left" Background="#FFB4F5D2" Margin="422,19,0,0" VerticalAlignment="Top" Width="75" FontSize="18.667" RenderTransformOrigin="-0.04,-0.15" BorderBrush="#FFB4F5D2" Click="button3_Click_1"/>
        <DataGrid AutoGenerateColumns="True" x:Name="DGVDatos" HorizontalAlignment="Left" Margin="262,64,0,0" VerticalAlignment="Top" Height="129" Width="225" SelectionChanged="dataGrid_SelectionChanged"/>

    </Grid>
</Window>
